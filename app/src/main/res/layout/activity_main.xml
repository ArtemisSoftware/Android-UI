<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ctr_lyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="24dp"
        android:text="Constraint Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ctr_lyt_const_sets" />

    <Button
        android:id="@+id/btn_ctr_lyt_const_sets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="160dp"
        android:text="Constraint Layout - Constraint Sets"
        app:layout_constraintEnd_toEndOf="@+id/btn_ctr_lyt"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toStartOf="@+id/btn_ctr_lyt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_col_tool_lyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="Collapsing Toolbar Layout"
        app:layout_constraintEnd_toEndOf="@+id/btn_ctr_lyt"
        app:layout_constraintStart_toStartOf="@+id/btn_ctr_lyt"
        app:layout_constraintTop_toBottomOf="@+id/btn_ctr_lyt" />


    <Button
        android:id="@+id/btn_grid_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Grid Menu"
        app:layout_constraintEnd_toEndOf="@+id/btn_ctr_lyt"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/btn_ctr_lyt"
        app:layout_constraintTop_toBottomOf="@+id/btn_ctr_lyt" />

    <Button
        android:id="@+id/btn_company_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Company Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_col_tool_lyt" />

</androidx.constraintlayout.widget.ConstraintLayout>
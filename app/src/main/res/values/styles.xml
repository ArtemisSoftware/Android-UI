<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!-- Pretty layout -->

    <style name="AppThemeCompanyLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_CompanyLayout</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_CompanyLayout</item>
        <item name="colorAccent">@color/colorAccent_CompanyLayout</item>
    </style>


    <style name="AppThemeHyogaTribute" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_HyogaTribute</item>
        <item name="colorPrimaryDark">@color/primaryDark_HyogaTribute</item>
    </style>

</resources>
